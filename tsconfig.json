{
  "compilerOptions": {
    "target": "ES2017", 
    "module": "commonjs", 
    "lib": ["ES2017", "DOM"], 
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "baseUrl": ".", 
    "outDir": "./dist", 
    "rootDir": "./src",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "dist", 
    "node_modules"
  ]
}